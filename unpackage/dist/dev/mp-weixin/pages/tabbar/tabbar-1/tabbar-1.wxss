.container .card {
    width: 100%;
    height: auto;
    background: #fff;
    border-radius: 5rpx;
    margin-bottom: 20rpx;
}
.container .card image {
      width: 100%;
      border-top-left-radius: 5rpx;
      border-top-right-radius: 5rpx;
}
.container .card .wrap {
      padding: 30rpx;
}
